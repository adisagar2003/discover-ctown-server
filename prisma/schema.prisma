generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String
  profilePicture String
  email String
  progress Int
  createdAt DateTime
  password String?
  notifications Notification[]
  Location Int[]
}

model Notification {
  id Int @id @default(autoincrement())
  time DateTime
  notificationThumbnail String
  notificationText String
  user User @relation(fields: [userId], references: [id])
  userId Int
}

model Location {
  id Int @id @default(autoincrement())
  title String
  description String
  likes Int
  latitude Float
  longitude Float
  image String
}

